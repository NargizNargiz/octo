
<h1>Listing SciptSteps</h1>
<p>Find me in app/views/script_steps/index.html.erb</p>

<table>
  <thead>
    <tr>
      <th>Name_Script</th>
      <th>Name_Step</th>
      <th>Steps</th>
      <th>Exec_Script</th>
      <th>All_scripts_description</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @script_steps.each do |script_step| %>
      <tr>
        <td><%= script_step.script_name %></td>
        <td><%= script_step.name_step %></td>
        <td><%=  render :partial => 'steps/steps', locals: {steps: script_step.steps} %></td>


        <td><%= link_to "exec_script" + script_step.exec_script.id.to_s, exec_script_path(script_step.exec_script) %></td>
      

        <td><%= link_to "all_scripts_description" + script_step.all_scripts_description.id.to_s, all_scripts_description_path(script_step.all_scripts_description) %></td>

        <td><%= link_to "Show", script_step %></td>
        <td><%= link_to "Edit", edit_script_step_path(script_step) %></td>
<!--        <td><%#= link_to "Add step", add_step_script_step_path(script_step) %></td>-->
        <td><%= link_to "Destroy",script_step, method: :delete, data: { confirm: "Are you sure?" } %></td>
        <td><%= button_to "Run Script", run_script_script_step_path(script_step) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "New script step", new_script_step_path %>
