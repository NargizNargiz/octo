/   strong
/     ' Название скрипта:
/   = @script_step.script_name
/ p
/   strong
/     ' Exec Script:
/   = link_to "exec_script" + @script_step.exec_script.id.to_s, exec_script_path(@script_step.exec_script)
/ p
/   strong
/     ' Script Description:
