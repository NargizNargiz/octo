<h1>Steps</h1>

<table>
  <thead>
    <tr>
      <th>Name Step</th>
      <th>Name Script</th>
      <th>Status</th>
      <th>Rollbacks</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.name_step %></td>

        <td><%= link_to "exec_script" + step.exec_script.id.to_s, exec_script_path(step.exec_script) %></td>
      
        <td><%= step.status %></td>
        <td><%= step.rollbacks %></td>

        <td><%= link_to "Show", step %></td>
        <td><%= link_to "Edit", edit_step_path(step) %></td>
        <td><%= link_to "Destroy",step, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New script step", new_step_path %>
